doctype html
html(lang="en", data-bs-theme="dark")
  include ../includes/head.pug
  +head("Hdert's General Purpose Web Calculator", "A general purpose calculator written in Zig, compiled to WebAssembly, now on the web!", "../img/icons/calculator-fill.png", false, "index", "An image of a calculator")
  body.min-vh-100.d-flex.flex-column.text-light
    .container-fluid.vh-100
      .justify-content-center.d-flex.flex-wrap.vh-100.align-items-start
        .col-12.col-sm-8.d-flex.flex-wrap.mt-3
          #upper-row.row.w-100.ms-0.overflow-auto
          .row.w-100.ms-0
            form#form.col-12.p-0
              .input-group
                .form-floating
                  input#input.form-control.border-secondary.text-light(
                    type="text",
                    name="input",
                    placeholder="9+10",
                    autofocus,
                    disabled
                  )
                  label#inputLabel.form-label.text-light(for="input") Loading...
                input#submit.btn.btn-primary.fs-3(
                  type="submit",
                  value="=",
                  disabled
                )

          #lower-row.row.w-100.ms-0
  script(src="../js/main.js", type="module")
  script(src="../js/includes.js", type="module")
